{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/analyze_response.schema.json",
  "title": "AnalyzeResponse v1",
  "type": "object",
  "required": [
    "schema_version",
    "model",
    "maturity_level",
    "summary",
    "results"
  ],
  "properties": {
    "schema_version": { "type": "string", "const": "1.0" },

    "model": {
      "type": "object",
      "required": ["vendor", "version"],
      "properties": {
        "vendor": { "type": "string" },
        "version": { "type": "string" }
      },
      "additionalProperties": false
    },

    "maturity_level": { "type": "integer", "minimum": 0 },

    "summary": {
      "type": "object",
      "required": ["total", "passed", "failed"],
      "properties": {
        "total": { "type": "integer", "minimum": 0 },
        "passed": { "type": "integer", "minimum": 0 },
        "failed": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": false
    },

    "results": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "mml", "passed", "details"],
        "properties": {
          "id": { "type": "string", "pattern": "^mml_\\d+:[a-z0-9_]+$" },
          "mml": { "type": "integer", "minimum": 0 },
          "passed": { "type": "boolean" },
          "details": { "type": "object" },
          "error": { "type": "string", "minLength": 1 }
        },
        "additionalProperties": false
      }
    }
  },

  "additionalProperties": false
}
